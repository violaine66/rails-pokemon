<%= link_to"<- Pokedex", root_path, class:"fs-3 custom-color" %>
<div class = "mt-3 fs-1 fw-bold">Let's get training </div>
  <div class="trainers">
    <% @trainers.each do |trainer| %>
      <%= link_to trainer_path(trainer), class: "trainer-card-link" do %>
      <div class="trainer-card my-3 py-3">
        <div class="img pb-2">
          <%= cl_image_tag trainer.photo.key, width: 150, height: 300, crop: :fill %>
        </div>
        <div class="infos">
            <div class="custom-color fs-3"> <%= trainer.name %></div>
            <div class="fs-4"><%= trainer.age %> years old</div>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
        <%= link_to "New Trainer", new_trainer_path, class: "btn btn-primary fw-bold my-5" %>
