<div class="mt-3">
  <%= link_to "< All Trainers", trainers_path, class:"custom-color fs-3" %>
</div>

  <div class="new-trainer mt-3">
    <div class="title-new fs-2">
      Sign up to train
    </div>

  <div class="form-new-trainer my-3">
    <%= simple_form_for (@trainer) do |f| %>
    <%= f.label :name, class:"text-white mt-3" %>
    <%= f.text_field :name , input_html: { class: "form-control text-dark bg-light pe-3" }  %>
    <%= f.label :age, class: "text-white ps-3 pb-3" %>
    <%= f.text_field :age, input_html: { class: "form-control text-dark bg-light pb-3" }  %>
    <%= f.input :photo, as: :file %>
    <%= f.submit %>
    <% end %>
  </div>

</div>
